<tr id="<%= dom_id(distance) %>" class="bg-white border-b border-stone-200 hover:bg-stone-50">
  <th scope="row" class="px-6 py-4 font-medium text-stone-800 whitespace-nowrap">
    <%= "#{distance.from.city_name}" %>
  </th>
  <td class="px-6 py-4 font-medium text-stone-800 whitespace-nowrap">
    <%= "#{distance.to.city_name}" %>
  </td>
  <td class="px-6 py-4">
    <%= "#{distance.distance.round(3)} км" %>
  </td>
  <td>
    <%= button_to saved_distance_path(distance), method: :delete, class: 'delete-button' do %>
      <%= icons('delete').html_safe %>
    <% end %>
  </td>
</tr>